<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:file:./target/h2db/db/pms;DB_CLOSE_DELAY=-1</property>
        <!--<property name="hibernate.connection.url">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property>-->
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>

        <property name="connection.pool_size">1</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="hibernate.connection.CharSet">utf8</property>
        <property name="hibernate.connection.characterEncoding">utf8</property>
        <property name="hibernate.connection.useUnicode">true</property>
        <!-- JDBC connection pool (use the built-in) -->

        <!--<mapping package="ch.bfh.bti7081.s2018.white.pms.common.model" />-->


        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.user.Doctor" />
        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.user.Patient" />
        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.user.Relative" />
        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.user.User" />

        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.caze.Case" />

        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.app.App" />

        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.app.goaltracker.Goal" />
        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.app.goaltracker.GoalTracker" />


        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.app.diary.Diary" />
        <mapping class="ch.bfh.bti7081.s2018.white.pms.common.model.app.diary.DiaryEntry" />
    </session-factory>
</hibernate-configuration>